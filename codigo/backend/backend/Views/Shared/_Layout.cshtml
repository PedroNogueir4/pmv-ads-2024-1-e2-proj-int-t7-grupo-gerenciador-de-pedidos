@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyEats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/backend.styles.css" asp-append-version="true" />
    <style>
        .options{
            min-height:83.9vh;
            padding:15px;
        }
        .color-wine{
            background: #AF3333;
        }

        .userDiv{
            display:flex !important;
            flex-direction:column !important;
            justify-content:center;
            align-items:center;
        }

        .ImagemLogo{
            width:100px;
            border-radius:10px;
            margin-right:20px;
        }

        .btLogout{
            width:50%;
            background: #AF0009
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow color-wine ">
            <div class="container">
                <img class="ImagemLogo" src="~/assets/ToWebdesign/Logo/logo.png" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li> *@
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Produtos" asp-action="Index">Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="StatusPedidos" asp-action="Index">Status</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Mesas" asp-action="Index">Mesas</a>
                            </li>
                        }
                    </ul>
                    <div class="navbar-nav userDiv">
                        @if (User.Identity.IsAuthenticated)
                        {
                                <h5 style="flex-direction:row" >
                                    Bem vindo, @User.Identity.Name!
                                </h5>
                            <a class="nav-link text-black btn btLogout" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container options">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container-fluid d-flex justify-content-center  color-wine text-black-50">
           Copyright &copy; 2024 - EasyEats 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
