@model backend.Models.Pedido

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Deseja realmente apagar esse pedido?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mesa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mesa.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="Index">Voltar</a> |
        <input type="submit" value="Deletar" class="btn btn-danger" />
    </form>
</div>
